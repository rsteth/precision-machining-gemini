---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Peak Precision Machining - Industrial & Commercial Machining in Bow Valley" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title} | Peak Precision Machining</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-charcoal text-white selection:bg-safety-orange selection:text-charcoal antialiased">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-charcoal: #121212;
		--color-matte-black: #1a1a1a;
		--color-safety-orange: #ff6b00;
		--color-accent-blue: #0070f3;
		--font-sans: 'Montserrat', sans-serif;
		--font-mono: 'Roboto Mono', monospace;
	}

	html {
		font-family: var(--font-sans);
		background: var(--color-charcoal);
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-sans);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-weight: 800;
	}

	code, .mono {
		font-family: var(--font-mono);
	}
</style>
