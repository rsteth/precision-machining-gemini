---
interface Props {
	title: string;
	description: string;
	icon?: string;
	href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="group relative block p-8 bg-white/5 border border-white/10 overflow-hidden hover:bg-safety-orange hover:border-safety-orange transition-all duration-300 transform hover:-translate-y-2">
	<!-- Decorative BG overlay -->
	<div class="absolute inset-0 bg-[radial-gradient(circle_at_100%_0%,rgba(255,255,255,0.1),transparent_50%)]"></div>

	<div class="relative z-10 flex flex-col h-full">
		<div class="w-12 h-12 bg-safety-orange/10 flex items-center justify-center rounded-sm mb-6 group-hover:bg-white/20 transition-colors">
			<slot name="icon" />
		</div>

		<h3 class="text-2xl font-black mb-4 group-hover:text-charcoal leading-none">{title}</h3>
		
		<p class="text-white/60 group-hover:text-charcoal/80 mb-8 flex-grow font-medium leading-relaxed">
			{description}
		</p>

		<div class="flex items-center text-xs mono uppercase tracking-widest font-black group-hover:text-charcoal">
			Learn More
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 group-hover:translate-x-1 transition-transform"><line x1="5" x2="19" y1="12" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
		</div>
	</div>
</a>
