---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';

const navItems = [
	{ name: 'Home', href: '/' },
	{ name: 'Services', href: '/services' },
	{ name: 'Capabilities', href: '/capabilities' },
	{ name: 'Case Studies', href: '/case-studies' },
	{ name: 'Get a Quote', href: '/quote' },
];
---

<Layout title="Modern Precision Machining">
	<Navbar />
	<main>
		<Hero />
		
		<!-- Services Section -->
		<section class="py-32 bg-matte-black border-y border-white/5 relative overflow-hidden">
			<!-- Background visual element -->
			<div class="absolute top-0 right-0 w-[40vw] h-[40vw] bg-safety-orange/5 blur-[120px] rounded-full -translate-y-1/2 translate-x-1/2"></div>
			
			<div class="container mx-auto px-6 relative z-10">
				<div class="flex flex-col md:flex-row md:items-end justify-between mb-20">
					<div class="max-w-2xl">
						<span class="mono text-[10px] uppercase tracking-[0.3em] text-safety-orange font-black mb-4 block">Core Capabilities</span>
						<h2 class="text-4xl md:text-6xl font-black tracking-tighter mb-0 leading-none">
							PRECISION WITHOUT <span class="text-safety-orange underline decoration-4 underline-offset-8">COMPROMISE.</span>
						</h2>
					</div>
					<div class="mt-8 md:mt-0">
						<a href="/services" class="text-xs mono uppercase tracking-widest font-black flex items-center hover:text-safety-orange transition-colors">
							All Services
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><line x1="5" x2="19" y1="12" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
						</a>
					</div>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<ServiceCard 
						title="CNC MACHINING" 
						description="High-speed milling and turning with tight tolerances. From complex prototypes to production runs."
						href="/services/machining"
					>
						<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><circle cx="12" cy="12" r="3"></circle><path d="M12 2v2"></path><path d="M12 20v2"></path><path d="m4.93 4.93 1.41 1.41"></path><path d="m17.66 17.66 1.41 1.41"></path><path d="M2 12h2"></path><path d="M20 12h2"></path><path d="m6.34 17.66-1.41 1.41"></path><path d="m19.07 4.93-1.41 1.41"></path></svg>
					</ServiceCard>

					<ServiceCard 
						title="HYDRAULIC SERVICES" 
						description="Complete cylinder repair, testing, and component manufacturing. Ensuring peak pressure performance."
						href="/services/hydraulics"
					>
						<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 12v1"></path><path d="M10 18v1"></path><path d="M10 15v1"></path></svg>
					</ServiceCard>

					<ServiceCard 
						title="FIELD ALIGNMENT" 
						description="Laser shaft alignment and vibration analysis. Eliminating premature wear in industrial equipment."
						href="/services/field-services"
					>
						<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="m8 3 4-2 4 2"></path><path d="m8 21 4 2 4-2"></path><path d="M12 13V1"></path><path d="M12 23v-10"></path><path d="m20 16 2-4-2-4"></path><path d="m4 8-2 4 2 4"></path><path d="M13 12H1"></path><path d="M23 12H11"></path></svg>
					</ServiceCard>
				</div>
			</div>
		</section>

		<!-- Capabilities CTA -->
		<section class="py-24 bg-safety-orange text-charcoal">
			<div class="container mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-12">
				<div class="max-w-3xl">
					<h2 class="text-5xl md:text-7xl font-black tracking-tight mb-6 leading-[0.85]">
						WE WORK TO <span class="bg-charcoal text-white px-2">MICRONS.</span>
					</h2>
					<p class="text-xl font-bold opacity-80 max-w-xl">
						Explore our full shop capabilities, from CAD design to 5-axis milling. We have the machinery to handle your most demanding specs.
					</p>
				</div>
				<a href="/capabilities" class="inline-flex items-center px-10 py-5 bg-charcoal text-white text-sm font-black uppercase tracking-widest hover:bg-white hover:text-charcoal transition-all">
					View Equipment List
				</a>
			</div>
		</section>

		<!-- Portfolio/Case Study Preview -->
		<section class="py-32 bg-charcoal overflow-hidden">
			<div class="container mx-auto px-6">
				<div class="flex flex-col items-center text-center mb-24">
					<span class="mono text-[10px] uppercase tracking-[0.3em] text-safety-orange font-black mb-4">Case Studies</span>
					<h2 class="text-5xl md:text-7xl font-black tracking-tighter mb-8 leading-none max-w-4xl">
						ENGINEERING SOLUTIONS FOR REAL-WORLD <span class="text-white/20 outline-text">PROBLEMS.</span>
					</h2>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					<div class="group cursor-pointer">
						<div class="aspect-video bg-white/5 border border-white/10 mb-8 relative overflow-hidden">
							<div class="absolute inset-0 bg-safety-orange/0 group-hover:bg-safety-orange/10 transition-colors duration-500"></div>
							<!-- Placeholder for high quality image -->
							<div class="absolute inset-0 flex items-center justify-center opacity-20 group-hover:opacity-40 transition-opacity">
								<span class="mono text-4xl font-black uppercase tracking-widest">Reverse Engineering</span>
							</div>
						</div>
						<span class="mono text-[10px] text-safety-orange font-black uppercase tracking-widest mb-2 block">Reverse Engineering</span>
						<h3 class="text-3xl font-black mb-4 hover:text-safety-orange transition-colors">Robot Arm Rebuild</h3>
						<p class="text-white/60 max-w-xl font-medium">Recreated a worn steel robot arm in lightweight aluminum — reducing joint wear and shortening overall length.</p>
					</div>

					<div class="group cursor-pointer">
						<div class="aspect-video bg-white/5 border border-white/10 mb-8 relative overflow-hidden">
							<div class="absolute inset-0 bg-safety-orange/0 group-hover:bg-safety-orange/10 transition-colors duration-500"></div>
							<!-- Placeholder for high quality image -->
							<div class="absolute inset-0 flex items-center justify-center opacity-20 group-hover:opacity-40 transition-opacity">
								<span class="mono text-4xl font-black uppercase tracking-widest">Rush Repair</span>
							</div>
						</div>
						<span class="mono text-[10px] text-safety-orange font-black uppercase tracking-widest mb-2 block">Rush Repair</span>
						<h3 class="text-3xl font-black mb-4 hover:text-safety-orange transition-colors">8-Foot Drive Shaft</h3>
						<p class="text-white/60 max-w-xl font-medium">1,500 lb drive shaft — 9" finished diameter — repaired and returned to service within 24 hours.</p>
					</div>
				</div>
			</div>
		</section>
	</main>

	<!-- Footer -->
	<footer class="bg-matte-black pt-24 pb-12 border-t border-white/5">
		<div class="container mx-auto px-6">
			<div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-20">
				<div class="md:col-span-2">
					<div class="flex items-center space-x-2 mb-8">
						<div class="w-8 h-8 bg-safety-orange flex items-center justify-center rounded-sm">
							<span class="font-mono text-charcoal font-black text-xl">P</span>
						</div>
						<div class="flex flex-col">
							<span class="text-xl font-extrabold tracking-tighter leading-none">PEAK PRECISION</span>
							<span class="text-[10px] mono tracking-[0.2em] text-safety-orange font-bold leading-none uppercase">Machining & Mechanical</span>
						</div>
					</div>
					<p class="text-white/40 max-w-sm mb-8 leading-relaxed font-medium">
						Based in the Bow Valley, providing precision engineering and mechanical solutions to industrial and commercial clients across Western Canada.
					</p>
					<div class="flex space-x-4">
						<div class="w-10 h-10 bg-white/5 border border-white/10 flex items-center justify-center hover:bg-safety-orange transition-colors cursor-pointer">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
						</div>
						<div class="w-10 h-10 bg-white/5 border border-white/10 flex items-center justify-center hover:bg-safety-orange transition-colors cursor-pointer">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
						</div>
						<div class="w-10 h-10 bg-white/5 border border-white/10 flex items-center justify-center hover:bg-safety-orange transition-colors cursor-pointer">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
						</div>
					</div>
				</div>

				<div>
					<h4 class="mono text-[10px] uppercase tracking-widest text-safety-orange font-black mb-8">Navigation</h4>
					<ul class="space-y-4">
						{navItems.map(item => (
							<li><a href={item.href} class="text-sm font-medium text-white/60 hover:text-white transition-colors">{item.name}</a></li>
						))}
					</ul>
				</div>

				<div>
					<h4 class="mono text-[10px] uppercase tracking-widest text-safety-orange font-black mb-8">Contact</h4>
					<ul class="space-y-4 text-sm font-medium text-white/60">
						<li>Bow Valley, Alberta</li>
						<li>403-679-7842</li>
						<li>info@peakprecisionmachining.ca</li>
					</ul>
				</div>
			</div>

			<div class="pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6">
				<p class="text-[10px] mono text-white/20 uppercase tracking-widest">© 2026 PEAK PRECISION MACHINING. ALL RIGHTS RESERVED.</p>
				<p class="text-[10px] mono text-white/20 uppercase tracking-widest flex items-center">
					DESIGNED FOR PRECISION
					<span class="w-1 h-1 bg-safety-orange rounded-full mx-3"></span>
					LOCAL EXPERTISE
				</p>
			</div>
		</div>
	</footer>
</Layout>

<style>
	.outline-text {
		-webkit-text-stroke: 1px rgba(255,255,255,0.1);
		color: transparent;
	}
</style>
