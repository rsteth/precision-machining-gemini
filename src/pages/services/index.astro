---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ServiceCard from '../../components/ServiceCard.astro';
---

<Layout title="Our Services">
	<Navbar />
	<main class="py-32 bg-charcoal">
		<div class="container mx-auto px-6">
			<div class="max-w-4xl mb-24">
				<span class="mono text-[10px] uppercase tracking-[0.3em] text-safety-orange font-black mb-6 block">Our Expertise</span>
				<h1 class="text-5xl md:text-8xl font-black tracking-tighter mb-12 leading-none uppercase">
					SERVICES &<br class="md:hidden"/> <span class="text-safety-orange">SOLUTIONS.</span>
				</h1>
				<p class="text-2xl text-white/60 font-medium leading-relaxed">
					From complex aerospace-grade components to heavy industrial repair, we provide the precision and reliability your operation depends on.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<ServiceCard 
					title="CNC MACHINING" 
					description="High-speed milling and turning with tight tolerances. From complex prototypes to production runs."
					href="/services/machining"
				>
					<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><circle cx="12" cy="12" r="3"></circle><path d="M12 2v2"></path><path d="M12 20v2"></path><path d="m4.93 4.93 1.41 1.41"></path><path d="m17.66 17.66 1.41 1.41"></path><path d="M2 12h2"></path><path d="M20 12h2"></path><path d="m6.34 17.66-1.41 1.41"></path><path d="m19.07 4.93-1.41 1.41"></path></svg>
				</ServiceCard>

				<ServiceCard 
					title="HYDRAULIC SERVICES" 
					description="Complete cylinder repair, testing, and component manufacturing. Ensuring peak pressure performance."
					href="/services/hydraulics"
				>
					<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 12v1"></path><path d="M10 18v1"></path><path d="M10 15v1"></path></svg>
				</ServiceCard>

				<ServiceCard 
					title="FIELD ALIGNMENT" 
					description="Laser shaft alignment and vibration analysis. Eliminating premature wear in industrial equipment."
					href="/services/field-services"
				>
					<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="m8 3 4-2 4 2"></path><path d="m8 21 4 2 4-2"></path><path d="M12 13V1"></path><path d="M12 23v-10"></path><path d="m20 16 2-4-2-4"></path><path d="m4 8-2 4 2 4"></path><path d="M13 12H1"></path><path d="M23 12H11"></path></svg>
				</ServiceCard>

				<ServiceCard 
					title="CUSTOM FABRICATION" 
					description="Welding and custom fabrication of complex structural and mechanical components."
					href="/services"
				>
					<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.77 3.77Z"></path></svg>
				</ServiceCard>

				<ServiceCard 
					title="PUMP REBUILDS" 
					description="Complete restoration of industrial pumps to OEM performance specifications."
					href="/services"
				>
					<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="M21 12a9 9 0 1 1-6.21-8.56"></path><path d="m9 10 2 2 4-4"></path><path d="M21 3v9h-9"></path></svg>
				</ServiceCard>

				<ServiceCard 
					title="CAD/CAM DESIGN" 
					description="Reverse engineering and precision design services for complex components."
					href="/services"
				>
					<svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-safety-orange group-hover:text-charcoal"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10Z"></path><path d="m9 12 2 2 4-4"></path></svg>
				</ServiceCard>
			</div>
		</div>
	</main>
</Layout>
